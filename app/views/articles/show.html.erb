<% provide(:title, "#{@article.title}") %>

<div class="row-fluid">
  <div class="span6">
    <h2><%= @article.title %></h2>
  </div>
  
  <div class="span6 pull-right right">
    <h5>Created <%= time_ago_in_words(@article.created_at) %> ago.</h5>
  </div>
</div>

<div class="row-fluid">
  <div class="span12">
    <p><%= @article.content %></p>
  </div>
</div>

<div class="row-fluid">
  <div class="span4">
    <p>Author: <%= "#{@article.author}" %></p>
  </div>

  <div class="span8 right">
    <%= link_to 'Edit', edit_article_path(@article) %> |
    <%= link_to 'Delete Article', @article, method: :delete, confirm: "Are You Sure?" %> |
    <%= link_to 'See All Articles', articles_path %>
  </div>
</div>
