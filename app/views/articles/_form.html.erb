
<%= form_for(@article) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :title %>
  <%= f.text_field :title, class: "span8" %>

  <%= f.label :content %>
  <%= f.text_area :content, class: "span8" %>

  <%= f.label :author %>
  <%= f.text_field :author, class: "span8" %>

  <%= f.label :tag_list, "Article Categories (separated by commmas)" %>
  <%= f.text_field :tag_list, class: "span8" %></br>

  <%= f.submit "Post Article", class: "btn btn-primary" %>
<% end %>
